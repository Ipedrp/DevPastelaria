<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".PerfilCliente">

    <View
        android:id="@+id/containerPerfilUsuarios"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/perfil_cliente"

        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/perfil"
        app:layout_constraintStart_toStartOf="@id/containerPerfilUsuarios"
        app:layout_constraintEnd_toEndOf="@id/containerPerfilUsuarios"
        app:layout_constraintTop_toTopOf="@id/containerPerfilUsuarios"
        app:layout_constraintBottom_toBottomOf="@id/containerPerfilUsuarios"
        />

    <ImageView
        android:id="@+id/iconePerfil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/perfil"
        app:layout_constraintTop_toBottomOf="@id/containerPerfilUsuarios"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/nomePerfilCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/containerPerfilUsuarios"
        app:layout_constraintStart_toEndOf="@id/iconePerfil"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/icon_email"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="37dp"
        app:layout_constraintTop_toBottomOf="@id/iconePerfil"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/emailPerfilCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/nomePerfilCliente"
        app:layout_constraintStart_toEndOf="@id/iconePerfil"
        />

    <Button
        android:id="@+id/btnDeslogarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deslogar"
        android:backgroundTint="@color/yellow"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/emailPerfilCliente"
        />


</androidx.constraintlayout.widget.ConstraintLayout>