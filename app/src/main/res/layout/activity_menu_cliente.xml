<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MenuCliente">

    <ImageView
        android:id="@+id/logoMenu"
        android:layout_width="110dp"
        android:layout_height="81dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="28dp"
        android:text="Dev Pastelaria"
        android:textColor="@color/yellow"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/logoMenu"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPasteis"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/logoMenu"
        app:layout_constraintStart_toStartOf="parent"
        android:text="PASTEIS"
        android:backgroundTint="@color/yellow"
        android:layout_margin="100dp"/>

    

</androidx.constraintlayout.widget.ConstraintLayout>